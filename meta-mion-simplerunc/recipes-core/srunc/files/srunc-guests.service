[Unit]
Description=Auto start and stop enabled srunc guests
After=network.target

[Service]
Type=oneshot
ExecStart=/sbin/srunc startup
RemainAfterExit=true
ExecStop=/sbin/srunc shutdown
StandardOutput=journal

[Install]
WantedBy=multi-user.target
